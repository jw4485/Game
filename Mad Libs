holiday = input("Enter a holiday:")
noun = input("Enter a noun:")
place = input("Enter a place:")
person = input("Enter a person:")
adjective = input("Enter an adjective:")
plural_body_part = input("Enter a body part (plural):")
verb = input("Enter a verb:")
food = input("Enter the name of a food:")
plural_noun = input("Enter a plural noun: ")

print("I can't believe it's already " + holiday + "!")
print("I can't wait to put on my " + noun + " and visit every " + place + " in my neighborhood.")
print("This year, I'm going to dress up as a " + person + " with " + adjective + " " + plural_body_part + ".")
print("Before I " + verb + ", I make sure to grab my bag to hold all of my " + food + ".")
print("Finally, all of my " + plural_noun + " are ready to go.")
